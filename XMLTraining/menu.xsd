<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema">

  <xsd:complexType name="FoodType">
    <xsd:sequence>
      <xsd:element name="name" type="xsd:string" />
      <xsd:element name="price" type="xsd:string" />
      <xsd:element name="description" type="xsd:string" />
      <xsd:element name="calories" type="xsd:string" />
    </xsd:sequence>
  </xsd:complexType>

  <xsd:element name="breakfast_menu">
    <xsd:complexType>
      <xsd:sequence>
        <xsd:element name="food" type="FoodType" maxOccurs="unbounded" />
      </xsd:sequence>
    </xsd:complexType>
  </xsd:element>

</xsd:schema>
