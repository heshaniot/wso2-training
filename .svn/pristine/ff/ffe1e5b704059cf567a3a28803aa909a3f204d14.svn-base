<?xml version="1.0" encoding="UTF-8"?>
<html xsl:version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform">
<body style="font-family:comic sans ms;font-size:12pt;background-color:#F781D8">
<xsl:for-each select="breakfast_menu/food">
  <div style="font-family:comic sans ms;background-color:#FF0040;color:#01DF3A;padding:4px">
    <span style="font-weight:bold"><xsl:value-of select="name"/> - </span>
    <xsl:value-of select="price"/>
    </div>
  <div style="margin-left:20px;margin-bottom:1em;font-size:10pt">
    <p>
    <xsl:value-of select="description"/>
    	<br>
	    <span style="font-famoly:comic sans ms"> <xsl:value-of select="calories"/> calories per serving</span>
	</br>    
    </p>
  </div>
</xsl:for-each>
</body>
</html>
